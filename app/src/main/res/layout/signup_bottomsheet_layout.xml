<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="2dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/bottom_sheet" />

        <ImageView
            android:id="@+id/bottomSheet_bg"
            android:layout_width="489dp"
            android:layout_height="353dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="-61dp"
            app:srcCompat="@drawable/asset_12" />

        <Button
            android:id="@+id/btn_SignUp"
            android:layout_width="133dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="139dp"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="136dp"
            android:layout_marginBottom="59dp"
            android:backgroundTint="@color/btnColorYellow"
            android:text="@string/btn_hint_signup"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.534"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.655" />

        <TextView
            android:id="@+id/tv_SignUp"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="149dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="400dp"
            android:text="@string/tv_sign_up"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="342dp"
            android:ems="10"
            android:hint="@string/hint_name"
            android:textColorHint="@color/hintColorBlue"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="233dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="222dp"
            android:ems="10"
            android:hint="@string/hint_Password"
            android:textColorHint="@color/hintColorBlue"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="171dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="284dp"
            android:ems="10"
            android:hint="@string/hint_Email"
            android:textColorHint="@color/hintColorBlue"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtReenter_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="145dp"
            android:ems="10"
            android:hint="@string/hint_Reenter_pwd"
            android:textColorHint="@color/hintColorBlue"
            android:inputType="textPassword" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>