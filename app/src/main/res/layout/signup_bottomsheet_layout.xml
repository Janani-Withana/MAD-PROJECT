<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/bottom_sheet" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="489dp"
            android:layout_height="353dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="-61dp"
            app:srcCompat="@drawable/asset_12" />

        <Button
            android:id="@+id/btn_login2"
            android:layout_width="110dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="146dp"
            android:layout_marginTop="389dp"
            android:layout_marginEnd="152dp"
            android:layout_marginBottom="59dp"
            android:backgroundTint="@color/btnColorYellow"
            android:text="@string/btnLogin"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.534"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.655" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="97dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="157dp"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="407dp"
            android:text="Sign Up"
            android:textSize="34sp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="342dp"
            android:ems="10"
            android:hint="Name"
            android:textColorHint="@color/hintColorBlue"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="233dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="222dp"
            android:ems="10"
            android:hint="@string/hint_password"
            android:textColorHint="@color/hintColorBlue"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="171dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="284dp"
            android:ems="10"
            android:hint="@string/hint_email"
            android:textColorHint="@color/hintColorBlue"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="145dp"
            android:ems="10"
            android:hint="Re-enter Password"
            android:textColorHint="@color/hintColorBlue"
            android:inputType="textPassword" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>